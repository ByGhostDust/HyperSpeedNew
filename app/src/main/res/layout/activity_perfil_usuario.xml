<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perfil_u"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewFotoPerfil"
        android:layout_width="188dp"
        android:layout_height="199dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/perfilu" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        tools:text="Nombre del Usuario" />

    <TextView
        android:id="@+id/textViewCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        tools:text="Correo Electrónico" />

    <TextView
        android:id="@+id/textViewTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        tools:text="Número de Teléfono" />

    <!-- Agrega esto en el layout donde muestras los datos del usuario -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="153dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/borde_redondo"
        android:backgroundTint="@color/primario"
        android:text="Volver"
        android:textColor="@color/white" />


</LinearLayout>
